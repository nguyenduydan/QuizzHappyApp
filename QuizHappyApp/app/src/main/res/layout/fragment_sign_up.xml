<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="344dp"
           android:layout_height="511dp"
           android:background="@drawable/bg_loginbox"
           android:elevation="10dp"
           android:gravity="top|center"
           android:orientation="vertical"
           android:paddingHorizontal="30dp"
           android:paddingVertical="20dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="30dp"
               android:orientation="horizontal"
               android:padding="10dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="25dp"
                   android:text="Đăng Ký"
                   android:textAllCaps="true"
                   android:textColor="@color/white"
                   android:textSize="25sp"
                   android:textStyle="bold" />

               <Button
                   android:id="@+id/btn_login"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="0dp"
                   android:text="đăng nhập"
                   android:textAllCaps="true"
                   android:textColor="@color/gray"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:backgroundTint="@android:color/transparent"
                   />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="vertical">

               <EditText
                   android:id="@+id/edt_username"
                   android:layout_width="252dp"
                   android:layout_height="51dp"
                   android:background="@drawable/bg_edittextbox"
                   android:drawableStart="@drawable/custom_personicon_focus"
                   android:drawablePadding="10dp"
                   android:hint="Tên đăng nhập..."
                   android:textColor="@color/white"
                   android:paddingHorizontal="10dp"
                   android:textSize="20dp" />
               <EditText
                   android:id="@+id/edt_email"
                   android:layout_width="252dp"
                   android:layout_height="51dp"
                   android:background="@drawable/bg_edittextbox"
                   android:drawableStart="@drawable/ic_emal_custom"
                   android:layout_marginVertical="20dp"
                   android:drawablePadding="10dp"
                   android:hint="Tên đăng nhập..."
                   android:textColor="@color/white"
                   android:paddingHorizontal="10dp"
                   android:textSize="20dp" />

               <EditText
                   android:id="@+id/edt_pwd"
                   android:layout_width="252dp"
                   android:layout_height="51dp"
                   android:background="@drawable/bg_edittextbox"
                   android:drawableStart="@drawable/custom_pwdicon_focus"
                   android:drawableEnd="@drawable/ic_eye"
                   android:drawablePadding="10dp"
                   android:inputType="textPassword"
                   android:hint="Mật khẩu..."
                   android:paddingHorizontal="10dp"
                   android:textSize="20dp" />
               <EditText
                   android:id="@+id/edt_pwd_confirm"
                   android:layout_width="252dp"
                   android:layout_height="51dp"
                   android:layout_marginVertical="20dp"
                   android:background="@drawable/bg_edittextbox"
                   android:inputType="textPassword"
                   android:drawableStart="@drawable/custom_pwdicon_focus"
                   android:drawableEnd="@drawable/ic_eye"
                   android:drawablePadding="10dp"
                   android:hint="Nhập lại mật khẩu..."
                   android:paddingHorizontal="10dp"
                   android:textSize="20dp" />
           </LinearLayout>

           <Button
               android:layout_width="250dp"
               android:layout_height="55dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/btn_signup"
               android:text="đăng ký"
               android:textAllCaps="true"
               android:textSize="25dp"
               android:textStyle="bold"
               app:backgroundTint="@null" />
       </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>